<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:background="@color/back_ground_hot">

    <ImageView
        android:id="@+id/imgHotMovie"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/bg_logo"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:id="@+id/tvHotMovieRate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:text="8.5"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/custom_text_view_rate">
    </TextView>

    <RatingBar
        android:id="@+id/rateBarHotMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:numStars="5"
        android:layout_below="@+id/imgHotMovie"
        android:layout_centerHorizontal="true"
        android:rating="4.5"
        android:stepSize="0.1"
        android:scaleX="1.5"
        android:scaleY="2"
        style = "?android:attr/ratingBarStyleSmall"
        android:progressTint="@color/yellow"
        android:progressBackgroundTint="@color/white">
    </RatingBar>

    <TextView
        android:id="@+id/tvHotMovieTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="Godzilla vs. Kong"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/rateBarHotMovie">
    </TextView>

</RelativeLayout>